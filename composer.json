{
    "name": "leonardjke/omnipay-qiwi",
    "description": "Qiwi p2p gateway for Omnipay payment processing library",
    "keywords": [
        "omnipay",
        "qiwi",
        "qiwi-p2p"
    ],
    "homepage": "https://github.com/leonardjke/omnipay-qiwi",
    "license": "MIT",
    "authors": [
        {
            "name": "leonardjke",
            "email": "a@leonardjke.net",
            "homepage": "https://github.com/leonardjke/omnipay-qiwi"
        }
    ],
    "require": {
        "php": "^7.2|^8",
        "omnipay/common": "3.2.1",
        "symfony/http-client": "^6.3"
    },
    "require-dev": {
        "omnipay/tests": "^v4.1.2",
        "squizlabs/php_codesniffer": "^3",
        "phpro/grumphp": "^1.3.0",
        "ext-json": "*",
        "http-interop/http-factory-guzzle": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\Qiwi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\Qiwi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true,
            "php-http/discovery": true
        }
    }
}
